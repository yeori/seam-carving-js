{
  "env": {
    "browser": true,
    "node": true,
    "es2020": true
  },
  "extends": "eslint:recommended",
  "plugins": ["import", "html"],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  }
}
